#
# Settings for the Cray vector machines
#

#
# tools
#

CC = cc
CXX = CC

MAKEDEPEND = $(CXX) -M
CMAKEDEPEND = $(CC) -M

RANLIB = ranlib


#
# flags
#

DEBUG_CFLAGS = -g
OPT_CFLAGS = 
NO_IEEE_FLOAT_GEN_CFLAGS = -hfp2
IEEE_FLOAT_GEN_CFLAGS = -hfp0
CFLAGS = -hcpu=cray-$(CHPL_MAKE_PLATFORM) -hgnu

COMP_CFLAGS = $(CFLAGS)
RUNTIME_CFLAGS = $(CFLAGS) -DNO_BYTES_PER_LOCALE -DNO_CORES_PER_LOCALE
GEN_CFLAGS = $(CFLAGS)

