FROM @@{OS_BASE_IMAGE}

@@{INJECT_BEFORE_DEPS}

@@{TEST_ENV}

RUN dnf upgrade -y && dnf install -y --allowerasing sudo vim which

@@{USER_CREATION}

COPY --chown=user @@{HOST_PACKAGE_PATH}/@@{PACKAGE_NAME} /home/user/@@{PACKAGE_NAME}

USER root
RUN dnf install -y --allowerasing ./@@{PACKAGE_NAME}
USER user
WORKDIR /home/user

RUN mason new MyPackage
WORKDIR /home/user/MyPackage
RUN chplcheck src/*.chpl
RUN mason build
RUN mason run -- -nl 1
WORKDIR /home/user
