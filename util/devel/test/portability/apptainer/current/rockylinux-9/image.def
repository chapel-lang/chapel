BootStrap: docker
From: rockylinux/rockylinux:9

%files
    ../../provision-scripts/* /provision-scripts/

%post
    /provision-scripts/dnf-upgrade.sh
    /provision-scripts/dnf-epel.sh
    /provision-scripts/dnf-deps.sh
