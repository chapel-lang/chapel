# -*- mode: ruby -*-
# vi: set ft=ruby :

# All Vagrant configuration is done below. The "2" in Vagrant.configure
# configures the configuration version (we support older styles for
# backwards compatibility). Please don't change it unless you know what
# you're doing.
Vagrant.configure("2") do |config|
  config.vm.box = "freebsd/FreeBSD-12.2-STABLE"

  config.vm.provision "shell",
    path: "../../provision-scripts/freebsd-pkg-deps.sh"

  # It comes with clang 10 and pkg install llvm installs 9,
  # but 13 is available.  E.g. /usr/local/llvm13/bin/llvm-config
  config.vm.provision "shell",
    path: "../../provision-scripts/freebsd-pkg-llvm13.sh"

  config.vm.provision "shell", privileged: false,
    path: "../../provision-scripts/git-clone-chapel.sh"

  config.vm.provision "shell", privileged: false,
    path: "../../provision-scripts/gmake-chapel-quick.sh"

  config.vm.provider "virtualbox" do |vb|
    vb.memory = 4096
    #vb.cpus = 2
  end

end
