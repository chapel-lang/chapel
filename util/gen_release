#!/usr/bin/perl


# check out a clean copy of the sources into a temporary directory
$pid = getpgrp();
$user = `whoami`;
chomp($user);
if ($basetmpdir eq "") {
    $basetmpdir = $ENV{'TMPDIR'};
}
if ($basetmpdir eq "") {
    $basetmpdir = "/tmp";
}
$tmpdir = "$basetmpdir/chapel-release.$user.$pid.deleteme";
$chapeldir = "$tmpdir/chapel";
$svnroot = "https://gemelli.cs.washington.edu/repos/chapel";
system("mkdir $tmpdir > /dev/null");
print "Checking out the sources...\n";
system("cd $tmpdir && svn export -q $svnroot");


# explicit files to include
@files = (
       "AGREEMENT",
       "CHANGES",
       "CONTRIBUTORS",
       "COPYRIGHT", 
       "GOALS",
       "LICENSE",
       "Makefile",
       "README",
       "README.files",
       "STATUS",
       "compiler/passes/reservedSymbolNames",
       "man/man1/chpl.1",
       "third-party/Makefile",
       "third-party/README",
       "util/chplmake",
       "util/comm.pl",
       "util/commSegment.pl",
       "util/commSubstrate.pl",
       "util/compiler.pl",
       "util/launcher.pl",
       "util/mem.pl",
       "util/platform.pl",
       "util/setchplenv.bash",
       "util/setchplenv.csh",
       "util/setchplenv.sh",
       "util/threads.pl",
       "util/updateBuildVersion.pl"
);

# C/C++ sources
@code_dirs = (
    "compiler"
);

# include these dirs and their entire contents
@complete_dirs = (
    "doc",
    "examples",
    "make",
    "modules",
    "runtime",
    "third-party/dlmalloc",
    "third-party/gasnet"
);


chdir "$tmpdir";

print "Tagging the files with copyright messages...\n";
system("cd chapel && make -f make/Makefile.release");

print "Generating the bison/flex files...\n";
system("cd chapel/compiler/parser && make lex.yy.c > /dev/null");

print "Creating the BUILD_VERSION file...\n";
system("cd chapel/compiler && export CHPL_DEVELOPER=true && make main/BUILD_VERSION > /dev/null");

print "Creating the examples directory...\n";
system("cd chapel && rm -r examples");
system("cd chapel && cp -r test/release/examples .");
system("cd chapel/util && cp start_test ../examples/");
system("cd chapel/examples && mkdir Bin");
system("cd chapel/test/Bin && cp timedexec sub_test sub_clean computePerfStats.pl filterSuppressions.pl ../../examples/Bin/");

print "Building the man page...\n";
system("cd chapel && make man");

print "Creating the docs directory...\n";
system("cd chapel && mv doc doctmp");
system("cd chapel && mv doctmp/release doc");
system("cd chapel && rm -r doctmp");

print "Removing runtime directories that are not ready for release...\n";
system("cd chapel/runtime && rm -r comm-armci");
system("cd chapel/runtime/include && rm -r comm-armci");
system("cd chapel/runtime && rm -r launch-mpirun");
system("cd chapel/runtime && rm -r mem-heapmm");
system("cd chapel/third-party/gasnet && rm -r GASNet-1.10.0");

foreach $file (@files) {
    $dfile = "chapel/$file";
    if (!(-e $dfile)) {
        print "$dfile does not exist\n";
        exit( 9);
    }
    push @tarfiles, $dfile;
}

foreach $dir (@code_dirs) {
    @filelist = `find chapel/$dir`;
    foreach $fullpath (@filelist) {
        chomp $fullpath;
        $file = $fullpath;
        $file =~ s/(\S+\/)+//g;
        if ($file =~ /(\.(h|cpp|c|y|lex)$)|Makefile|README|BUILD_VERSION/) {
            # print "$fullpath\n";
            push @tarfiles, $fullpath;
        }
    }
}

foreach $dir (@complete_dirs) {
    @filelist = `find chapel/$dir`;
    foreach $fullpath (@filelist) {
        chomp $fullpath;
        next if (-d $fullpath);
        # print "$fullpath\n";
        push @tarfiles, $fullpath;
    }
}


# verify only files are listed
foreach $file (@tarfiles) {
    if (-d $file) {
        print "error: directory '$file' included\n";
    }
}


if (defined($ENV{"CHPL_HOME"})) {
    $resultdir = $ENV{"CHPL_HOME"};
    $resultdir = "$resultdir/tar";
} else {
    $resultdir = $basetmpdir;
}

$cmd = "tar -cz -f $resultdir/chapel.tar.gz @tarfiles";
#print "$cmd\n";
system ($cmd);

print "Left result in $resultdir/chapel.tar.gz\n";

system("rm -r $tmpdir");
