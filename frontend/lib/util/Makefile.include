ALL_SRCS += ../frontend/lib/util/*.h ../frontend/lib/util/*.cpp


FRONTEND_UTIL_SRCS =      \
  assertions.cpp \
  bitmap.cpp \
  break.cpp \
  chplenv.cpp \
  filesystem.cpp \
  printf.cpp \
  string-escapes.cpp \
  subprocess.cpp \
  terminal.cpp \


