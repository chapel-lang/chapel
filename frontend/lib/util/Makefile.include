FRONTEND_UTIL_OBJS = \
	$(FRONTEND_UTIL_SRCS:%.cpp=$(FRONTEND_UTIL_OBJDIR)/%.$(OBJ_SUFFIX)) \
        $(FRONTEND_UTIL_OBJDIR)/my_aligned_alloc.o \
        $(FRONTEND_UTIL_OBJDIR)/my_strerror_r.o \
