   concept didn't win enough support to merge as present, but are here
   in case we change our minds in a future release.

| expr TDOTDOTOPENLOW expr
    { $$ = makeErrorExpr(); }
| expr TDOTDOTOPENBOTH expr
    { $$ = makeErrorExpr(); }
| expr TDOTDOTOPENLOW
    { $$ = makeErrorExpr(); }
*/
| expr TDOTDOT
    { $$ = makeErrorExpr(); }
| TDOTDOT expr
    { $$ = makeErrorExpr(); }
| TDOTDOTOPENHIGH expr
    { $$ = makeErrorExpr(); }
| TDOTDOT
    { $$ = makeErrorExpr(); }
;

opt_expr:
                  { $$ = NULL; }
| expr            { $$ = $1; }
;

opt_try_expr:
  TTRY expr       { $$ = makeErrorExpr(); }
| TTRYBANG expr   { $$ = makeErrorExpr(); }
| expr
;

lhs_expr:
  ident_expr
| call_expr
| dot_expr
| parenthesized_expr
;

/* Representations of values which can be invoked as functions.
 *
 * NOTE:  In order to allow expr to be invoked as a function
 *        opt_actual_ls, and every production it relies on, would need to be
 *        reworked to not permit the empty production. */
call_base_expr:
  lhs_expr
| expr TBANG                    { $$ = makeErrorExpr(); }
| sub_type_level_expr TQUESTION { $$ = makeErrorExpr(); }
| lambda_decl_expr
| str_bytes_literal
;

call_expr:
  call_base_expr TLP opt_actual_ls TRP        { $$ = makeErrorExpr(); }
| call_base_expr TLSBR opt_actual_ls TRSBR    { $$ = makeErrorExpr(); }
| TPRIMITIVE TLP opt_actual_ls TRP            { $$ = makeErrorExpr(); }
;

dot_expr:
  expr TDOT ident_use          { $$ = makeErrorExpr(); }
| expr TDOT TTYPE              { $$ = makeErrorExpr(); }
| expr TDOT TDOMAIN            { $$ = makeErrorExpr(); }
| expr TDOT TLOCALE            { $$ = makeErrorExpr(); }
| expr TDOT TBYTES TLP TRP     { $$ = makeErrorExpr(); }
;

/* ( <expr> ) -- A parenthesized expression.  The parens are stripped.
 * ( <expr> , ) -- A one-tuple.  (Trailing comma is disallowed for longer tuples.)
 * ( <tuple_expr_ls> ) -- Two-tuples and up.  A tuple_expr_ls contains at least 2 elements.
 */
parenthesized_expr:
  TLP tuple_component TRP           { $$ = makeErrorExpr(); }
| TLP tuple_component TCOMMA TRP    { $$ = makeErrorExpr(); }
| TLP tuple_expr_ls TRP             { $$ = makeErrorExpr(); }
| TLP tuple_expr_ls TCOMMA TRP      { $$ = makeErrorExpr(); }
;

bool_literal:
  TFALSE { $$ = makeErrorExpr(); }
| TTRUE  { $$ = makeErrorExpr(); }
;

str_bytes_literal:
  STRINGLITERAL   { $$ = makeErrorExpr(); }
| BYTESLITERAL    { $$ = makeErrorExpr(); }
;

literal_expr:
  bool_literal
| str_bytes_literal
| INTLITERAL            { $$ = makeErrorExpr(); }
| REALLITERAL           { $$ = makeErrorExpr(); }
| IMAGLITERAL           { $$ = makeErrorExpr(); }
| CSTRINGLITERAL        { $$ = makeErrorExpr(); }
| TNONE                 { $$ = makeErrorExpr(); }
| TLCBR expr_ls TRCBR          { $$ = makeErrorExpr(); }
| TLCBR expr_ls TCOMMA TRCBR   { $$ = makeErrorExpr(); }
| TLSBR expr_ls TRSBR          { $$ = makeErrorExpr(); }
| TLSBR expr_ls TCOMMA TRSBR   { $$ = makeErrorExpr(); }
| TLSBR assoc_expr_ls TRSBR
    {
      $$ = makeErrorExpr();
    }
| TLSBR assoc_expr_ls TCOMMA TRSBR
    {
      $$ = makeErrorExpr();
    }

;

assoc_expr_ls:
  expr TALIAS expr                      { $$ = makeErrorExprList(); }
| assoc_expr_ls TCOMMA expr TALIAS expr { $1->push_back(makeErrorExpr()); }
;

binary_op_expr:
  expr TPLUS expr          { $$ = makeErrorExpr(); }
| expr TMINUS expr         { $$ = makeErrorExpr(); }
| expr TSTAR expr          { $$ = makeErrorExpr(); }
| expr TDIVIDE expr        { $$ = makeErrorExpr(); }
| expr TSHIFTLEFT expr     { $$ = makeErrorExpr(); }
| expr TSHIFTRIGHT expr    { $$ = makeErrorExpr(); }
| expr TMOD expr           { $$ = makeErrorExpr(); }
| expr TEQUAL expr         { $$ = makeErrorExpr(); }
| expr TNOTEQUAL expr      { $$ = makeErrorExpr(); }
| expr TLESSEQUAL expr     { $$ = makeErrorExpr(); }
| expr TGREATEREQUAL expr  { $$ = makeErrorExpr(); }
| expr TLESS expr          { $$ = makeErrorExpr(); }
| expr TGREATER expr       { $$ = makeErrorExpr(); }
| expr TBAND expr          { $$ = makeErrorExpr(); }
| expr TBOR expr           { $$ = makeErrorExpr(); }
| expr TBXOR expr          { $$ = makeErrorExpr(); }
| expr TAND expr           { $$ = makeErrorExpr(); }
| expr TOR  expr           { $$ = makeErrorExpr(); }
| expr TEXP expr           { $$ = makeErrorExpr(); }
| expr TBY expr            { $$ = makeErrorExpr(); }
| expr TALIGN expr         { $$ = makeErrorExpr(); }
| expr THASH expr          { $$ = makeErrorExpr(); }
| expr TDMAPPED expr       { $$ = makeErrorExpr(); }
;

unary_op_expr:
  TPLUS expr %prec TUPLUS         { $$ = makeErrorExpr(); }
| TMINUS expr %prec TUMINUS       { $$ = makeErrorExpr(); }
| TMINUSMINUS expr %prec TUMINUS  { $$ = makeErrorExpr(); /* warn */ }
| TPLUSPLUS expr %prec TUPLUS     { $$ = makeErrorExpr(); /* warn */ }
| TBANG expr %prec TLNOT          { $$ = makeErrorExpr(); }
| expr TBANG                      { $$ = makeErrorExpr(); }
| TBNOT expr                      { $$ = makeErrorExpr(); }
;

reduce_expr:
  expr TREDUCE expr                              { $$ = makeErrorExpr(); }
| expr TREDUCE zippered_iterator                 { $$ = makeErrorExpr(); }
| reduce_scan_op_expr TREDUCE expr               { $$ = makeErrorExpr(); }
| reduce_scan_op_expr TREDUCE zippered_iterator  { $$ = makeErrorExpr(); }
;

scan_expr:
  expr TSCAN expr                              { $$ = makeErrorExpr(); }
| expr TSCAN zippered_iterator                 { $$ = makeErrorExpr(); }
| reduce_scan_op_expr TSCAN expr               { $$ = makeErrorExpr(); }
| reduce_scan_op_expr TSCAN zippered_iterator  { $$ = makeErrorExpr(); }
;


reduce_scan_op_expr:
  TPLUS  { $$ = makeErrorExpr(); }
| TSTAR  { $$ = makeErrorExpr(); }
| TAND   { $$ = makeErrorExpr(); }
| TOR    { $$ = makeErrorExpr(); }
| TBAND  { $$ = makeErrorExpr(); }
| TBOR   { $$ = makeErrorExpr(); }
| TBXOR  { $$ = makeErrorExpr(); }
;
