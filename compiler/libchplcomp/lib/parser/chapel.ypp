%type <exprList> opt_task_intent_ls task_intent_ls task_intent_clause
%type <exprList> forall_intent_clause forall_intent_ls

%type <exprList> fn_decl_stmt_start fn_decl_stmt_inner
%type <exprList> opt_formal_ls req_formal_ls formal_ls
%type <expr> fn_decl_receiver_expr
%type <functionTag> proc_iter_or_op
%type <linkageTag> linkage_spec
%type <linkageTag> extern_or_export
%type <expr> intent_expr
%type <shadowTag> shadow_var_prefix

%%

program:
  toplevel_stmt_ls                    { context->takeTopLevelStmts($1); }
;

// 'toplevel_stmt_ls' is 'stmt_ls' plus resetTempID()
toplevel_stmt_ls:
                                      { $$ = new ExprList(); }
| toplevel_stmt_ls toplevel_stmt      { $$->push_back($2); }
;

// Switch between plain statements and those preceded by pragmas
toplevel_stmt:
   stmt
|  pragma_ls stmt                     { $$ = makeErrorExprList(); }
;

// Sequence of pragmas
pragma_ls:
  TPRAGMA STRINGLITERAL                { $$ = new StrList; $$->push_back($2); }
| pragma_ls TPRAGMA STRINGLITERAL      { $1->push_back($3); }
;

stmt:
  module_decl_stmt          { $$ = context->finishStmt($1); }
| include_module_stmt       { $$ = context->finishStmt($1); }
| block_stmt                { $$ = context->finishStmt($1); }
| use_stmt                  { $$ = context->finishStmt($1); }
| import_stmt               { $$ = context->finishStmt($1); }
| require_stmt              { $$ = context->finishStmt($1); }
| class_level_stmt          { $$ = context->finishStmt($1); }
| assignment_stmt           { $$ = context->finishStmt($1); }
| extern_block_stmt         { $$ = context->finishStmt($1); }
| if_stmt                   { $$ = context->finishStmt($1); }
| implements_stmt           { $$ = context->finishStmt($1); }
| interface_stmt            { $$ = context->finishStmt($1); }
| loop_stmt                 { $$ = context->finishStmt($1); }
| select_stmt               { $$ = context->finishStmt($1); }
| defer_stmt                { $$ = context->finishStmt($1); }
| try_stmt                  { $$ = context->finishStmt($1); }
| throw_stmt                { $$ = context->finishStmt($1); }
| return_stmt               { $$ = context->finishStmt($1); }
| stmt_level_expr TSEMI     { $$ = context->finishStmt($1); }
| TATOMIC stmt              { $$ = context->finishStmt(makeErrorExpr()); }
| TBEGIN opt_task_intent_ls stmt         { $$ = context->finishStmt(makeErrorExpr()); }
| TBREAK opt_label_ident TSEMI           { $$ = context->finishStmt(makeErrorExpr()); }
| TCOBEGIN opt_task_intent_ls block_stmt { $$ = context->finishStmt(makeErrorExpr()); }
| TCONTINUE opt_label_ident TSEMI        { $$ = context->finishStmt(makeErrorExpr()); }
| TDELETE simple_expr_ls TSEMI           { $$ = context->finishStmt(makeErrorExpr()); }
| TLABEL ident_def stmt     { $$ = context->finishStmt(makeErrorExpr()); }
| TLOCAL expr do_stmt       { $$ = context->finishStmt(makeErrorExpr()); }
| TLOCAL do_stmt            { $$ = context->finishStmt(makeErrorExpr()); }
| TON expr do_stmt          { $$ = context->finishStmt(makeErrorExpr()); }
| TSERIAL expr do_stmt      { $$ = context->finishStmt(makeErrorExpr()); }
| TSERIAL do_stmt           { $$ = context->finishStmt(makeErrorExpr()); }
| TSYNC stmt                { $$ = context->finishStmt(makeErrorExpr()); }
| TYIELD expr TSEMI         { $$ = context->finishStmt(makeErrorExpr()); }
| error TSEMI               { $$ = context->finishStmt(makeErrorExpr()); }
;

module_decl_start:
  access_control opt_prototype TMODULE ident_def
    {
      // TODO: replace makeErrorExpr with a decl for the module
      ExprList* comments = enterStmt(@$);
      Expr* stmt = context->enterModule($4, makeErrorExpr());
      $$ = makeCommentsAndStmt(comments, stmt);
    }
;

module_decl_stmt:
   module_decl_start TLCBR TRCBR
    { $$ = exitModule($1, NULL); }
| module_decl_start TLCBR stmt_ls TRCBR
    { $$ = exitModule($1, $3); }
| module_decl_start TLCBR error TRCBR
    { $$ = exitModule($1, makeErrorExprList()); }
;

access_control:
           { $$ = VisibilityTag_DEFAULT; }
| TPUBLIC  { $$ = VisibilityTag_PUBLIC; }
| TPRIVATE { $$ = VisibilityTag_PRIVATE; }
;

opt_prototype:
             { $$ = PrototypeTag_DEFAULT; }
| TPROTOTYPE { $$ = PrototypeTag_PROTOTYPE;  }
;

include_module_stmt:
 TINCLUDE
  {
    @1.comment = context->latestComment;
    context->latestComment = NULL;
  }
 access_control opt_prototype TMODULE ident_def TSEMI
 {
   // TODO: replace makeErrorExpr with a decl for the module
   ExprList* declList = context->startStmt(makeErrorExpr());
   $$ = context->enterModule($4);
   // TODO: parse module
   $$ = context->exitModule($$,  
   exitModule
   $$ = buildIncludeModule($6, $3, $4, @1.comment);
 }
;

/* Grouping of statements into blocks.

   Note:  There cannot be a blank production appearing immediately after TLCBR
   as this results in a shift/reduce conflict with the statement level
   expression expr TDOT expr (see domain literals).  This production (and the
   the other productions on which it depends) were purposefully redefined
   without blank productions to allow the full version of dot_expr to appear at
   the statement level.
*/
block_stmt:
  TLCBR         TRCBR                  { $$ = new BlockStmt(); }
| TLCBR stmt_ls TRCBR                  { $$ = $2;              }
| TLCBR error   TRCBR                  { $$ = buildErrorStandin(); }
;

// Sequence of toplevel_stmts
stmt_ls:
  toplevel_stmt                        { $$ = new BlockStmt(); $$->appendChapelStmt($1); }
| stmt_ls toplevel_stmt                { $1->appendChapelStmt($2); }
;


renames_ls:
  expr                                 { $$ = new std::vector<PotentialRename*>();
                                         PotentialRename* cur = new PotentialRename();
                                         cur->tag = PotentialRename::SINGLE;
                                         cur->elem = $1;
                                         $$->push_back(cur); }
| expr TAS expr                        { $$ = new std::vector<PotentialRename*>();
                                         PotentialRename* cur = new PotentialRename();
                                         cur->tag = PotentialRename::DOUBLE;
                                         cur->renamed = new std::pair<Expr*, Expr*>($1, $3);
                                         $$->push_back(cur); }
| renames_ls TCOMMA expr                  { PotentialRename* cur = new PotentialRename();
                                         cur->tag = PotentialRename::SINGLE;
                                         cur->elem = $3;
                                         $1->push_back(cur); }
| renames_ls TCOMMA expr TAS expr         { PotentialRename* cur = new PotentialRename();
                                         cur->tag = PotentialRename::DOUBLE;
                                         cur->renamed = new std::pair<Expr*, Expr*>($3, $5);
                                         $1->push_back(cur); }
;

/* Separated so that use statements can rename their module to "_", but nothing
   else can */
use_renames_ls:
  expr                                 { $$ = new std::vector<PotentialRename*>();
                                         PotentialRename* cur = new PotentialRename();
                                         cur->tag = PotentialRename::SINGLE;
                                         cur->elem = $1;
                                         $$->push_back(cur); }
| expr TAS expr                        { $$ = new std::vector<PotentialRename*>();
                                         PotentialRename* cur = new PotentialRename();
                                         cur->tag = PotentialRename::DOUBLE;
                                         cur->renamed = new std::pair<Expr*, Expr*>($1, $3);
                                         $$->push_back(cur); }
| expr TAS TUNDERSCORE                 { $$ = new std::vector<PotentialRename*>();
                                         PotentialRename* cur = new PotentialRename();
                                         cur->tag = PotentialRename::DOUBLE;
                                         cur->renamed = new std::pair<Expr*, Expr*>($1, new UnresolvedSymExpr("_"));
                                         $$->push_back(cur); }
| use_renames_ls TCOMMA expr           { PotentialRename* cur = new PotentialRename();
                                         cur->tag = PotentialRename::SINGLE;
                                         cur->elem = $3;
                                         $1->push_back(cur); }
| use_renames_ls TCOMMA expr TAS expr  { PotentialRename* cur = new PotentialRename();
                                         cur->tag = PotentialRename::DOUBLE;
                                         cur->renamed = new std::pair<Expr*, Expr*>($3, $5);
                                         $1->push_back(cur); }
| use_renames_ls TCOMMA expr TAS TUNDERSCORE { PotentialRename* cur = new PotentialRename();
                                         cur->tag = PotentialRename::DOUBLE;
                                         cur->renamed = new std::pair<Expr*, Expr*>($3, new UnresolvedSymExpr("_"));
                                         $1->push_back(cur); }
;


opt_only_ls:
  /* nothing */                        { $$ = new std::vector<PotentialRename*>();
                                         PotentialRename* cur = new PotentialRename();
                                         cur->tag = PotentialRename::SINGLE;
                                         cur->elem = new UnresolvedSymExpr("");
                                         $$->push_back(cur); }
| renames_ls
;

except_ls:
  TSTAR                                { $$ = new std::vector<PotentialRename*>();
                                         PotentialRename* cur = new PotentialRename();
                                         cur->tag = PotentialRename::SINGLE;
                                         cur->elem = new UnresolvedSymExpr("");
                                         $$->push_back(cur); }
| renames_ls
;

use_access_control:
           { $$ = VisibilityTag_DEFAULT; }
| TPUBLIC  { $$ = VisibilityTag_PUBLIC; }
| TPRIVATE { $$ = VisibilityTag_PRIVATE; }
;

use_stmt:
  use_access_control TUSE use_renames_ls TSEMI            { $$ = buildUseStmt($3, $1); }
| use_access_control TUSE expr TEXCEPT except_ls TSEMI    { $$ = buildUseStmt($3, "", $5, true, $1); }
| use_access_control TUSE expr TAS expr TEXCEPT except_ls TSEMI    { $$ = buildUseStmt($3, $5, $7, true, $1); }
| use_access_control TUSE expr TAS TUNDERSCORE TEXCEPT except_ls TSEMI    { $$ = buildUseStmt($3, new UnresolvedSymExpr("_"), $7, true, $1); }
| use_access_control TUSE expr TONLY opt_only_ls TSEMI    { $$ = buildUseStmt($3, "", $5, false, $1); }
| use_access_control TUSE expr TAS expr TONLY opt_only_ls TSEMI    { $$ = buildUseStmt($3, $5, $7, false, $1); }
