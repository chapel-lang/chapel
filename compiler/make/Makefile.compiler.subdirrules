
include $(COMPILER_ROOT)/make/Makefile.compiler.commonrules

depend: $(DEPENDSUBDIRS) $(OBJ_SUBDIR_MADE) $(DEPEND_DEPS) echocompilerdir
	@echo Updating dependences...
	@rm -f $(CVS_DEPENDS).tmp
	@echo > $(CVS_DEPENDS).tmp
	@$(MAKE) filedepend
	$(OTHER_DEPEND_RULES)
	@mv -f $(CVS_DEPENDS).tmp $(CVS_DEPENDS)

CVS_DEPS= $(CVS_SRCS:%.cpp=%.depend)

filedepend: $(CVS_DEPS)
