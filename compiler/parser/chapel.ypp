shadow_var_prefix:
  TCONST       { $$ = SVP_CONST;     }
| TIN          { $$ = SVP_IN;        }
| TCONST TIN   { $$ = SVP_CONST_IN;  }
| TREF         { $$ = SVP_REF;       }
