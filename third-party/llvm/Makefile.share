LLVM_DIR=$(THIRD_PARTY_DIR)/llvm
LLVM_SUBDIR=llvm-src
ifneq ("$(wildcard $(LLVM_DIR)/llvm-project)","")
  LLVM_SUBDIR=llvm-project/llvm
endif
LLVM_SRC_DIR = $(LLVM_DIR)/$(LLVM_SUBDIR)
LLVM_UNIQUE_SUBDIR=$(CHPL_MAKE_LLVM_UNIQ_CFG_PATH)
LLVM_BUILD_SUBDIR=build/$(LLVM_UNIQUE_SUBDIR)
LLVM_BUILD_DIR=$(LLVM_DIR)/$(LLVM_BUILD_SUBDIR)-$(CHPL_MAKE_HOST_COMPILER)
LLVM_INSTALL_SUBDIR=install/$(LLVM_UNIQUE_SUBDIR)
LLVM_INSTALL_DIR=$(LLVM_DIR)/$(LLVM_INSTALL_SUBDIR)
LLVM_INCLUDE_DIR=$(LLVM_INSTALL_DIR)/include
LLVM_BIN_DIR=$(LLVM_INSTALL_DIR)/bin
LLVM_LIB_DIR=$(LLVM_INSTALL_DIR)/lib

LLVM_SUPPORT_BUILD_SUBDIR = build/support-only-$(LLVM_UNIQUE_SUBDIR)
LLVM_SUPPORT_INSTALL_SUBDIR = install/support-only-$(LLVM_UNIQUE_SUBDIR)
LLVM_SUPPORT_BUILD_DIR=$(LLVM_DIR)/$(LLVM_SUPPORT_BUILD_SUBDIR)
LLVM_SUPPORT_INSTALL_DIR=$(LLVM_DIR)/$(LLVM_SUPPORT_INSTALL_SUBDIR)
