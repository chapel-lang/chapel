include_HEADERS = qthread.h
qthreaddir = $(includedir)/qthread
dist_qthread_HEADERS = \
	qthread.h \
	qthread.hpp \
	syncvar.hpp \
	allpairs.h \
	wavefront.h \
	cacheline.h \
	qalloc.h \
	qarray.h \
	qlfqueue.h \
	qdqueue.h \
	qpool.h \
	qutil.h \
	qloop.h \
	feb_barrier.h \
	futurelib.h \
	qtimer.h \
	loop_templates.hpp \
	loop_iter.hpp \
	loop.hpp

# These headers are generated by ./configure
nodist_qthread_HEADERS = \
	common.h \
	qthread-int.h

# Installed here to keep it separate from the "real" omp_defines.h
noinst_HEADERS = \
	omp_defines.h

if COMPILE_TARGET_SST
dist_qthread_HEADERS += qthread-sst.h
endif

distclean-local:
	$(RM) -f qthread-int.h

uninstall-local:
	test -d "$(qthreaddir)" && rmdir $(qthreaddir) || true
