#!/usr/bin/env python3

# Run ra with n=33 and 10 million updates. ugni is much faster for ra-atomics,
# so bump the number of updates to 1 billion to get stable timings. We get
# unordered ops by default, but we want to track ordered and oversubscribed
# ordered for ugni as well.
import os

comm = os.getenv('CHPL_COMM')
ugni = comm == 'ugni'

nu = 10000000000

common = '--no-cache-remote -sn=33:indexType -sN_U={0}:indexType -sverify=false'.format(nu)

print('--no-optimize-forall-unordered-ops {0} # ra.atomic-ord'.format(common))
print('   --optimize-forall-unordered-ops {0} # ra.atomic-uno'.format(common))
print('                       -saggregate {0} # ra.atomic-agg'.format(common))
