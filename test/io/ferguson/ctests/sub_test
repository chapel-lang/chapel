#!/bin/sh

# These C tests don't conform to -Wall
unset CHPL_DEVELOPER

COMP=`$CHPL_HOME/util/config/compileline --compile`
RSRC="$CHPL_HOME/runtime/src"

echo $COMP | grep atomics/intrinsics
if [ $? == 0 ]
then
  echo C tests will run using atomics/intrinsics
else
  echo Skipping C I/O tests without atomics/intrinsics
  exit
fi

T1="$COMP -o deque_test -g deque_test.c -DSIMPLE_TEST $RSRC/deque.c -Wall"
T2="$COMP -o qbuffer_test -g qbuffer_test.c -DSIMPLE_TEST $RSRC/qbuffer.c $RSRC/sys.c $RSRC/sys_xsi_strerror_r.c $RSRC/deque.c -Wall"
T3="$COMP -o qio_test -g qio_test.c -DSIMPLE_TEST $RSRC/qio.c $RSRC/sys.c $RSRC/sys_xsi_strerror_r.c $RSRC/qbuffer.c $RSRC/deque.c -Wall -pthread"
T4="$COMP -o qio_formatted_test -g qio_formatted_test.c -DSIMPLE_TEST $RSRC/qio.c $RSRC/qio_formatted.c $RSRC/sys.c $RSRC/sys_xsi_strerror_r.c $RSRC/qbuffer.c $RSRC/deque.c -Wall -pthread"
T5="$COMP -o qio_memfile_test -g qio_memfile_test.c -DSIMPLE_TEST $RSRC/qio.c $RSRC/qio_formatted.c $RSRC/sys.c $RSRC/sys_xsi_strerror_r.c $RSRC/qbuffer.c $RSRC/deque.c -Wall -pthread"
T6="$COMP -o qio_bits_test -g qio_bits_test.c -DSIMPLE_TEST $RSRC/qio.c $RSRC/sys.c $RSRC/sys_xsi_strerror_r.c $RSRC/qbuffer.c $RSRC/deque.c -Wall -pthread"
T7="$COMP -o qio_mark_test -g qio_mark_test.c -DSIMPLE_TEST $RSRC/qio.c $RSRC/sys.c $RSRC/sys_xsi_strerror_r.c $RSRC/qbuffer.c $RSRC/deque.c -Wall -pthread"

echo $T1
echo $T2
echo $T3
echo $T4
echo $T5
echo $T6
echo $T7

$T1 && $T2 && $T3 && $T4 && $T5 && $T6 && $T7

RETVAL=$?

runtest() {
  EXE=$1
  DESC=$2
  echo Running $EXE
  $EXE > /dev/null
  RETVAL=$?
  if [ $RETVAL -eq 0 ]
  then
    echo "[Success matching C I/O test $EXE $DESC]"
    rm $EXE
  else
    echo "[Error matching C I/O test $EXE $DESC]"
  fi
}

if [ $RETVAL -eq 0 ]
then
  echo "[Success compiling C I/O tests]"

  runtest ./deque_test "Deque Test"
  runtest ./qbuffer_test "Buffer Test"
  runtest ./qio_test "I/O Test"
  runtest ./qio_formatted_test "Formatted I/O Test"
  runtest ./qio_memfile_test "Memory File Test"
  runtest ./qio_bits_test "Bit I/O Test"
  runtest ./qio_mark_test "Bit I/O Test"
else
  echo "[Error compiling C I/O tests]"
fi

