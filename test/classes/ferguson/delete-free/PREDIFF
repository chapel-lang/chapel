#!/bin/bash
cp $2 $2.prediff.tmp
touch $2.prediff.g.tmp
greprc=1
if [ -f memlog ]
then
  grep -A 1000 "Leaked Memory Report" memlog | grep -e '^[0-9]' > $2.prediff.g.tmp
  greprc=$?
fi
if [ "$greprc" -eq 0 ]
then
  echo "leaks" >> $2.prediff.tmp
  cat $2.prediff.g.tmp >> $2.prediff.tmp
fi

rm $2.prediff.g.tmp
mv $2.prediff.tmp $2
rm -f memlog
