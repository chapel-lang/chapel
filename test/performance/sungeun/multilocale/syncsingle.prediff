#!/usr/bin/env python

import sys, os, string

origfile = sys.argv[2]
newfile = origfile+'.'+str(os.getpid())+'.tmp'

fo = open(origfile, 'r');
single = fo.readline()
sync = fo.readline()

def fixForkCounts(fn, orig):
    # forks on locale 4 may vary by 1 due to the begin syncing with main
    counts = orig.split(')')
    l4 = counts[-2].split()
    if l4[0]=='(get':
        forks = l4[26]
        if forks >= '1,' and forks <= '2,':
            forks = '2,'
        for c in counts[0:-2]:
            fn.write(c+')')
        for e in l4[0:26]:
            fn.write(' '+e)
        fn.write(' '+forks)
        for c in l4[27:]:
            fn.write(' '+c)
        fn.write(')\n')
    else:
        # leave the original line as is
        fn.write(orig)

fn = open(newfile, 'w');
if single[0:4] == '(get':
    fixForkCounts(fn, single)
else:
    fn.write(single)
if sync[0:4] == '(get':
    fixForkCounts(fn, sync)
else:
    fn.write(sync)

rest = fo.readlines()
fo.close()

for l in rest:
    fn.write(l)
fn.close()

os.rename(newfile, origfile)


